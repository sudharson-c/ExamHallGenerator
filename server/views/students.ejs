<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student List</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>
</head>
<body>
  <a href="/generate" class="btn btn-primary" style="position: absolute; margin: 15px;">Back</a>
  
  <button id="downloadPdfBtn" class="btn btn-success" style="position: absolute; margin-left: 90%" onclick="downloadAsPDF()">Download as PDF</button>
  <div class="container mt-5">
    <h3>Date : <%= locals.date %></h3>
    <h2>Student List </h2>
    <table id="studentTable" class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Reg No</th>
          <th>Attendance</th>
        </tr>
      </thead>
      <tbody>
        <% id = 1 %>
        <% students.forEach(function(student) { %>
          <tr>
            <td><%= id++ %></td>
            <td><%= student.regno %></td>
            <td class="text-success"><%if(student.absent) {%><strong class="text-danger">Absent</strong><%} else {%>Present<%}%></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script>
    // const date = document.getElementsByTagName("h3")
    // date.item(0).innerHTML += new Date().toLocaleString().slice(0, -10);
    function downloadAsPDF(){
      window.print()
    }
  </script>
</body>
</html>
